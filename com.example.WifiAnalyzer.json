{
  "app-id": "com.example.WifiAnalyzer",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "wifi-analyzer",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=system-bus",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=host:ro",
    "--share=network",
    "--system-talk-name=org.freedesktop.NetworkManager",
    "--system-talk-name=fi.w1.wpa_supplicant1",
    "--talk-name=org.freedesktop.NetworkManager"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "wifi-analyzer",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
